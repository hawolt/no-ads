{
  "manifest_version": 2,
  "name": "Twitch Adblock",
  "version": "1.0",
  "description": "Creates a new player which serves no ads",
  "permissions": [
    "activeTab",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.twitch.tv/*"
      ],
      "js": [
        "hls.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "hls.min.js"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "video-dom-editor@example.com",
      "strict_min_version": "109.0"
    }
  }
}